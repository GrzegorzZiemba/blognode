<%- include('./includes/header.ejs') %>
    <%- include('./includes/navbar.ejs') %>


    <section class="main-content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-lg-10">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
    
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text">
                        <%= post.description %>
                    </p>
                    <p class="card-text">
                        <%= post._id %>
                    </p>
                    <p><%= post.author %></p>
                    <p><%= user %></p>
                    <% if (post.author == user) { %>
                        <p>Action</p>
                        <form action="/post-delete" method="POST" class="login-form">
                            <input type="hidden" value="<%= post._id %>" name="postId">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="submit-button" type="submit">Delete</button>
                        </form> 
                        <!-- <form action="/login" method="POST" class="login-form">
               
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
                            <button type="submit" class="submit-button">Log in</button>
                        </form> -->
                    <% } else { %>
                        <h1>No Posts</h1>
                    <% } %>  

                    <a href="subpage.html" class="btn btn-primary"><%= post.date %>}</a>

                    </div>
                </div>
                <% }) %>

            <% } else { %>
                <h1>No Posts</h1>
            <% } %>
      </div>
      </div>
    </section>
    <%- include('./includes/footer.ejs') %>

  </body>
</html>
