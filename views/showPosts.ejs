<%- include('./includes/header.ejs') %>
    <%- include('./includes/navbar.ejs') %>


    <section class="main-content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-lg-10">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
    
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text">
                        <%= post.description %>
                    </p>
                    <p class="card-text">
                        <%= post._id %>
                    </p>
                    <a href="subpage.html" class="btn btn-primary"><%= post.date %>}</a>

                    </div>
                </div>
                <% }) %>

            <% } else { %>
                <h1>No Posts</h1>
            <% } %>
      </div>
      </div>
    </section>
    <%- include('./includes/footer.ejs') %>

  </body>
</html>
