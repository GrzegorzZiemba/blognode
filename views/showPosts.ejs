<%- include('./includes/header.ejs') %>
    <%- include('./includes/navbar.ejs') %>


    <section class="main-content">
    <div class="container-fluid">

      <div class="row">
        <div class="col-lg-10">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
    
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <div style=" overflow: hidden;
                            white-space: nowrap;
                        max-height: 80px;
                        text-overflow: clip;">
                         <p class="card-text">
                       
                        <%- post.description %>
                    </p>
                </div>
                    <p class="card-text">
                        <%= post._id %>
                    </p>
                    <p class="card-text">
                        <%= isAuth %>
                    </p>
                    <p><%= post.author %></p>
                    <% if (post.author == isAuth) { %>
                        <p>Action</p>
                        <form action="/post-delete" method="POST" class="login-form">
                            <input type="hidden" value="<%= post._id %>" name="postId">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="submit-button" type="submit">Delete</button>
                        </form> 
                 
                    <% } else { %>
                        <h1>No Posts</h1>
                    <% } %>  

                    <a href="/post/<%= post._id %>" class="btn btn-primary"><%= post.date %>}</a>

                    </div>
                </div>
                <% }) %>

            <% } else { %>
                <h1>No Posts</h1>
            <% } %>
      </div>
      </div>
    </section>
    <%- include('./includes/footer.ejs') %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1234567890123456" crossorigin="anonymous"></script>
